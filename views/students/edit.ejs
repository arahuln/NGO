
    <div class="col d-flex justify-content-center">
        <div class="card text-center" style="width: 30rem;">
            <h5 class="card-header">Edit Student Details form</h5>
            <div class="card-body">   
    <form action="/students/<%=student._id%>?_method=PUT" method="POST">






        <div class="form-group">
        <label for="name">Student Name</label>
        <input type="text" class="form-control" name="name" placeholder="Student Name" value="<%=student.name%>">
        </div>


        <div class="form-group">
        <label for="class">Class</label>
        <input type="number" class="form-control" name="class" id="class" placeholder="Class" value="<%=student.class%>">
        </div>
        
        <div class="form-group">
        <label for="place">Address</label>
        <input type="text" class="form-control" name="place" id="place" placeholder="Address" value="<%=student.place%>">
        </div>

        <% layout('layouts/boilerplate')%>
        <div class="form-group">
        <label for="motherName">Mother Name</label>
        <input type="text" class="form-control" name="motherName" id="motherName" placeholder="Student Mother Name" value="<%=student.motherName%>">
    </div>
     
    <div class="form-group">
        <label for="fatherName">Father Name</label>
        <input type="text" class="form-control" name="fatherName" id="fatherName" placeholder="Student Father Name" value="<%=student.fatherName%>">
    </div>

    <div class="form-group">
        <label for="mobile">Mobile No </label>
        <input type="number" class="form-control" name="mobile" id="mobile" placeholder="Parents Mobile No" value="<%=student.mobile%>">
    </div>

    <div class="form-group">
        <label for="centre">Select Centre</label>
        <select name="centre" class="form-control" id="centre">
            <% for(let centre of centres) {%> 
            <option value="<%=centre%>" <%= student.centre===centre?'selected':''  %>    ><%= centre  %> </option>  
            <% } %> 
        </select>
        </div>
        <br>
        <button class="btn btn-primary mb-2">Submit</button>
    </form>

    <a href="/students/<%=student._id%>">Cancel</a>
